<!DOCTYPE html>
<html lang="es">
  <head>
    <title>Figuritas</title>
    <link rel="shortcut icon" href="trofeo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="style.css" />

  </head>
  <body>
    
    <div class="container">
      <% for (let i = 0; i < figuritas.length; i++) { %>
        <div class="figurita" style="background-image: url('<%= figuritas[i].imagen %>')">
          >
          <div class="info">
            <h2><%= figuritas[i].nombre %></h2>
            <p id="pais"> <%= figuritas[i].pais %></p>
            <p id="numero"> <%= figuritas[i].numero %></p>
            <p><%= figuritas[i].tengo ? 'En posesión' : 'Faltante' %></p>
            <p class="cantidad">Cantidad:<span id="cantidad-<%= figuritas[i].id %>"><%= figuritas[i].cantidad %></span></p>
            <form>
            <button type="button" class="add-button" data-id="<%= figuritas[i].id %>">Agregar +1</button>
              <input type="hidden" name="_method" value="PUT">
            </form>
                             
          </div> 
        </div>        
      <% } %>
    </div>
    <!-- Agregar un botón de reinicio -->
    <button class="reset-button" id="reset-button">Reiniciar</button>
  <ul id="botones">
    <button class="boton" id="todas-button">Todas</button>
    <button class="boton" id="posesion-button">En posesión</button>
    <button class="boton" id="repetidas-button">Repetidas</button>
    <button class="boton" id="faltantes-button">Faltantes</button>
</ul>
    <img src="logo.png" alt="Logo" class="logo" width="400" height="400">
    <script src="principal.js"></script>
  </body>
</html>
